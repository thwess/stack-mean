<!DOCTYPE html>
<html ng-app="myApp">
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

  <section ng-controller="CadastroController">
      <form ng-submit="buscarUsuario(email);">
        <input type="text" ng-model="email" placeholder="email"/>
        <input type="submit" value="Buscar"/>
      </form>

      <form ng-submit="adicionarUsuario();">
        <input type="text" ng-model="usuario.ds_email" placeholder="email"/>
        <input type="password" ng-model="usuario.ds_senha" placeholder="senha"/>
        <input type="text" ng-model="usuario.nm_usuario" placeholder="nome"/>
        <input type="submit" value="Adicionar"/>
      </form>

      <table>
        <thead>
          <th>Email</th>
          <th>Senha</th>
          <th>Nome</th>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <tr ng-repeat="u in usuarios">
            <td>{{u.ds_email}}</td>
            <td>{{u.ds_senha | MaskSenha}}</td>
            <td>{{u.nm_usuario}}</td>
            <td><a href ng-click="alterar(u);">Alterar</a></td>
            <td><a href ng-click="excluir(u);">Excluir</a></td>
          </tr>
        </tbody>
      </table>
  </section>

  <script type="text/javascript" src="/javascripts/angular.min.js"></script>
  <script type="text/javascript" src="/javascripts/main.js"></script>
  <script type="text/javascript" src="/javascripts/controllers.js"></script>
  <script type="text/javascript" src="/javascripts/services.js"></script>
  <script type="text/javascript" src="/javascripts/factories.js"></script>
  <script type="text/javascript" src="/javascripts/filters.js"></script>
  </body>
</html>
